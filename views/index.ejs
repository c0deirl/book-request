<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Request System</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1 class="page-title"><img src="/images/logo.png" alt="Book Request Logo" class="logo"> Book Request System</h1>
    
    <div class="request-form-container">
      <form action="/search-books" method="GET" class="search-books-form">
        <input type="text" name="q" placeholder="Search for books..." class="search-input">
        <button type="submit" class="search-button">Search Books</button>
      </form>
      <form method="POST" action="/add-request" id="bookRequestForm">
        <h2>New Request</h2>
        <div>
          <label for="name">Your Name:</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div>
          <label for="title">Book Title:</label>
          <input type="text" id="title" name="title" required>
        </div>
        <div>
          <label for="author">Author:</label>
          <input type="text" id="author" name="author">
        </div>
        <div>
          <label for="notes">Additional Notes:</label>
          <textarea id="notes" name="notes"></textarea>
        </div>
        <button type="submit">Request Book</button>
      </form>
    </div>
    
    <div class="requests-list-container">
      <h2>Requested Books</h2>
      <ul class="requests-list">
        <% requests.forEach(request => { %>
          <li class="request-item <%= request.checked ? 'available' : '' %>">
            <div class="request-content">
              <strong><%= request.name %>:</strong>
              <div><%= request.title %> <% if (request.checked) { %><span class="available-tag">AVAILABLE</span><% } %></div>
              <div><em>(<%= request.author || 'Unknown Author' %>)</em></div>
              <p class="notes"><%= request.notes || 'No notes' %></p>
              <button class="mark-available-button" data-id="<%= request.id %>">Mark as Available</button>
              <button class="delete-button" data-id="<%= request.id %>">Delete</button>
              <small><%= new Date().toLocaleDateString() %></small>
            </div>
          </li>
        <% }); %>
      </ul>
    </div>
  </div>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
       line-height: 1.6;
      background-color: #282c34; /* Dark background */
      color: #abb2bf; /* Light gray text */
     }
    
     .container {
       max-width: 800px;
       margin: 0 auto;
       padding: 2rem;
     }
    
     h1, h2 {
       margin-bottom: 1rem;
      color: #61afef; /* A softer blue for headings */
     }
    
    .page-title {
      display: flex;
      align-items: center;
    }

    .logo {
      height: 40px; /* Adjust size as needed */
      margin-right: 15px;
    }

     .request-form-container {
       margin-bottom: 2rem;
       padding: 20px;
      background: #323842; /* Darker background for form */
       border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.2); /* Darker shadow */
     }
    
     .requests-list-container {
       margin-top: 2rem;
     }
    
     ul {
       padding: 0;
       list-style-type: none;
     }
    
     li {
       display: flex;
       align-items: center;
       padding: 10px 0;
      border-bottom: 1px solid #444; /* Darker border */
     }
    
     .request-content {
       flex: 1;
     }
    
     .request-item.available {
       opacity: 0.7; /* Slightly dim available items if desired */
     }
    
     button {
      background-color: #56b6c2; /* A teal-like color for buttons */
      color: #282c34; /* Dark text for light buttons */
       border: none;
       padding: 10px 20px;
       border-radius: 5px;
       cursor: pointer;
       font-size: 16px;
       margin-top: 10px;
     }
    
     button:hover {
      background-color: #61afef; /* Lighter blue on hover */
     }
    
     label {
       display: block;
       margin-bottom: 5px;
       font-weight: bold;
     }
    
     input, textarea {
       width: 100%;
       padding: 8px;
       margin-bottom: 15px;
      border: 1px solid #555; /* Darker border for inputs */
       border-radius: 4px;
      font-size: 16px;
      background-color: #3e4451; /* Darker input background */
      color: #abb2bf; /* Light text for inputs */
     }
    
     textarea {
      min-height: 100px;
      resize: vertical;
    }
  </style>
  
  <style>
    .available-tag {
      font-size: 1.2em; /* Make text larger */
      color: #006400; /* Dark green color */
      margin-left: 20px; /* Push text to the right */
      font-weight: bold;
    }
  </style>
  
  <script>
    document.querySelectorAll('.mark-available-button').forEach(button => {
      button.addEventListener('click', function() {
        fetch('/mark-available', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({ id: this.dataset.id })
        }).then(() => {
          window.location.reload();
        });
      });
    });

    document.querySelectorAll('.delete-button').forEach(button => {
      button.addEventListener('click', function() {
        if (confirm('Are you sure you want to delete this request?')) {
          fetch('/delete-request', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ id: this.dataset.id })
          }).then(() => {
            window.location.reload(); // Reload the page to show updated list
          });
        }
      });
    });
  </script>

  <script>
    // Auto-fill form if redirected from search
    document.addEventListener('DOMContentLoaded', () => {
      const requestedBook = localStorage.getItem('requestedBook');
      if (requestedBook) {
        const book = JSON.parse(requestedBook);
        document.getElementById('title').value = book.title || '';
        document.getElementById('author').value = book.author || '';
        document.getElementById('notes').value = book.description || '';
        localStorage.removeItem('requestedBook'); // Clean up localStorage
      }
    });
  </script>
</body>
</html>